<h1><%= @article.title %> </h1>

<!-- Unless is the same as 'if not' -->
<%unless @article.user.nil? %>
<p>
	Escrito por: <%= @article.user.email %>
</p>
<p>
	Visitas: <%= @article.visits_count %>
</p>
<% end %>


<div>
	<%=@article.body %>
</div>
<br>
<div>
	<%= link_to "Editar", edit_article_path(@article), class:"red" %>
</div>